@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>New Customer</h2>
@using (Html.BeginForm("Save", "Customers"))
{
<div class="form-group">
    @*/Her input fieldı bootstrapın anlaması için div ile wrap ediyoruz/*@
    @Html.LabelFor(m => m.Customer.Name) @*Modeldeki hedef özellik için lambda expression yazılır *@
    @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })@*(Helper methodlar) parametre olarak anonymes object geçip istediğimiz özellikleri verebiliriz,hepsi HTML attributeları olarak render edilecek. *@
    @*parametre olarak gectıgımız form-control ile form elemanı daha modern bir görüntüye sahip olur *@
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Birthdate, "Date Of Birth")
    @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}",new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.MembershipTypeId)
    @Html.DropDownListFor(m => m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),"Please select membership type", new { @class = "form-control" })
</div>
<div class="mb-3 form-check">
    @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter)
    <label class="form-check-label" for="exampleCheck1"> Subscribed To Newsletter? </label>
</div>
@Html.HiddenFor(m=>m.Customer.Id)
<button type ="submit" class="btn btn-primary" >Save</button>


    }

